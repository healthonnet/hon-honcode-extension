{

  "description": "Add honCode informations on Search Engines results",
  "manifest_version": 2,
  "name": "hon-honcode-extension",
  "version": "1.0.2",
  "default_locale":"en",
  "icons": {
    "48": "images/icons/icon-48.png"
  },

  "applications": {
    "gecko": {
      "id": "honcode_extension@healthonnet.org",
      "strict_min_version": "46.0.0"
    }
  },

  "background": {
    "scripts": [
      "scripts/utils/md5.js",
      "scripts/utils/hash.js",
      "scripts/utils/listHON.js",
      "scripts/background.js"
    ]
  },

  "browser_action": {
      "default_icon": {
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
      },
      "default_title": "Kconnect"
    },

  "permissions": [
    "tabs",
    "activeTab",
    "http://*/*",
    "https://*/*",
    "storage",
    "webRequest"
  ],

  "web_accessible_resources": [
    "styles/main.css"
  ]

}
